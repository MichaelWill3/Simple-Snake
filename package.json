{
  "name": "snake",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal Electron app that opens a window (initial scaffold)",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reporter": ["text", "html"],
      "reportsDirectory": "coverage",
      "cleanOnRerun": true,
      "include": [
        "src/**/*.{js,ts}"
      ],
      "exclude": [
        "**/electron/**",
        "**/tests/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/coverage/**"
      ]
    }
  }
}


